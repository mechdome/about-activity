<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/mechdome_intro"
        android:textColor="?android:attr/textColorPrimary"
        tools:textColor="?android:attr/textColorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        custom:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        custom:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewSupportOSS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/mechdome_support_oss"
        android:textColor="?android:attr/textColorPrimary"
        tools:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp"
        custom:layout_constraintBottom_toTopOf="@+id/buttonBuy"
        android:layout_marginLeft="0dp"
        custom:layout_constraintLeft_toLeftOf="@+id/textView" />

    <Button
        android:id="@+id/buttonBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Ads"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="8dp"
        custom:layout_constraintBottom_toTopOf="@+id/adview"
        android:layout_marginLeft="0dp"
        custom:layout_constraintLeft_toLeftOf="@+id/textViewSupportOSS" />

    <Button
        android:id="@+id/buttonRestore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restore Purchase"
        android:layout_alignBaseline="@+id/buttonBuy"
        android:layout_alignBottom="@+id/buttonBuy"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="8dp"
        custom:layout_constraintBottom_toTopOf="@+id/adview"
        android:layout_marginRight="0dp"
        custom:layout_constraintRight_toRightOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:adjustViewBounds="false"
        android:src="@drawable/mechdome_logo"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


    <com.mechdome.view.google.AdMobNativeView
        android:id="@+id/adview"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_marginBottom="0dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>